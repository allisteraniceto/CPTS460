VFD=mtximage

as86 -o  ts.o  ts.s
bcc  -c -ansi  t.c
bcc  -c -ansi  int.c
bcc  -c -ansi  do_functions.c
bcc  -c -ansi  kernal.c
bcc  -c -ansi  misc.c
bcc  -c -ansi  queue.c

ld86 -d -o mtx ts.o t.o int.o kernel.o misc.o do_functions.o mtxlib /usr/lib/bcc/libc.a

mount -o loop $VFD /mnt
cp a.out /mnt/boot/mtx
umount /mnt
#rm *.o mtx

(cd USER; ./mku u1)
cp mtximage oldimage
qemu-system-i386 -fda oldimage -no-fd-bootchk
rm -f oldimage
echo done
